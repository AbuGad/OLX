<h1>creating new article</h1>

<% if @article.errors.any? %>
<h2>The Following Errors Prevented Article From Created</h2>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<%end%>
	</ul>
<%end%>

<%= form_for @article do |f| %>
	<p>
		<%= f.label :Title %><br/>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :Description %><br/>
		<%= f.text_area :description %>
	</p>
	<%= f.submit 'create article'%>
<%end%>
<br/>
<%= link_to 'showing all articles', articles_path %>