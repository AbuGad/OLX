<h1 align="center">Edit Category</h1>

<%= render 'shared/errors', art: @category %>

<%= form_for(@category, :html => {class: 'form-horizontal', role: 'form' }) do |c| %>
	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= c.label :Name %>
		</div>
		<div class="col-sm-8">
			<%= c.text_field :name, class: "form-control", placeholder: 'Category name', autofoucus: true %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= c.submit class: 'btn btn-primary btn-lg'%>	
		</div>
	</div>
<%end%>
<div class="col-xs-4 col-xs-offset-5">
	<%= link_to 'showing all articles', articles_path %>
</div>