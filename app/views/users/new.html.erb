<h1> Signup Page</h1>

<%= render 'shared/errors', art: @user %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: 'form-horizontal', role: 'form' }) do |u| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= u.label :Username %>
				</div>
				<div class="col-sm-8">
					<%= u.text_field :username, class: "form-control", placeholder: 'Username', autofoucus: true %>	
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= u.label :Email %>
				</div>
				<div class="col-sm-8">
				<%= u.email_field :email, class: "form-control", placeholder: 'Email', autofoucus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= u.label :Password %>
				</div>
				<div class="col-sm-8">
				<%= u.password_field :password, class: "form-control", placeholder: 'password', autofoucus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= u.submit class: 'btn btn-primary btn-lg'%>	
				</div>
			</div>
		<%end%>
		<div class="col-xs-4 col-xs-offset-5">
			<%= link_to 'showing all articles', articles_path %>
		</div>	
	</div>
</div>
