<h1 align="center">All Users</h1>

<div align="center">
	<%= will_paginate %>		
</div>
<div align="center">
	<% @users.each do |u| %>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<div class="well well-lg">
					<div class="article-title">
			 			<%= link_to u.username, user_path(u) %>
					</div>
					<% if curent_user == u  %>
						<div class="article-actions">
							<%=link_to "Edit", edit_user_path(u), class: 'btn btn-xs btn-primary' %> |
							<%= link_to "Delete", user_path(u), method: :delete,
				 				data: {confirm:'are u sure'},
				 				class: 'btn btn-xs btn-danger' %>	
						</div>
					<%end%>
				</div>
			</div>
		</div> 		
	<%end%>	
</div>
<div align="center">
	<%= will_paginate %>
</div>