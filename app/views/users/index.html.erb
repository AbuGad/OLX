<h1 align="center">All Users</h1>

<div align="center">
	<%= will_paginate %>		
</div>
<div align="center">
	<% @users.each do |u| %>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<div class="well well-lg">
					<div class="article-title">
			 			<%= link_to u.username, user_path(u) %>
			 			<h4 class="article-count">
			 				{ <%= pluralize(u.articles.count, "article") if u.articles %> }
			 			</h4>
					</div>
					<% if curent_user == u || curent_user.admin?  %>
						<div class="article-actions">
							<%=link_to "Edit User", edit_user_path(u), class: 'btn btn-xs btn-primary' %> |
							<%= link_to "Delete User", user_path(u), method: :delete,
				 				data: {confirm:'Are You Sure'},
				 				class: 'btn btn-xs btn-danger' %>	
						</div>
					<%end%>
				</div>
			</div>
		</div> 		
	<%end%>	
</div>
<div align="center">
	<%= will_paginate %>
</div>